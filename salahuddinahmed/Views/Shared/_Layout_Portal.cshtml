<link href="~/Content/Fancy/css/fancyzoom.css" rel="stylesheet" />
<script src="~/Content/Fancy/js/jquery.fancyzoom.js"></script>
<script>
    $(document).ready(function () {
        $(".zoom").fancyZoom();
        $('.bxslider').bxSlider(
            {
                auto: true,
                mode: 'fade',
                speed: 100
            });
    });

    $('.delete-btn').on('click', function () {
        var url = $(this).attr('href');
        $("#btn_confirmation_window").dialog({
            title: 'Delete Confirmation',

            autoOpen: false,
            resizable: false,
            height: 220,
            width: 350,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            buttons: {
                "Confirm": function () {
                    window.location.href = url;
                },
                "Cancle": function () {
                    $(this).dialog("close");

                }
            },
            //buttons: {
            //    "Cancle": function () {
            //        $(this).dialog("close");

            //    }
            //},
            close: function (event, ui) {
                $(this).dialog('close');
            }
        });
        //$('#btn_confirmation_window button').on('click', function () {
        //    var confirm = $(this).attr('value');
        //    if (confirm == 'true') {
        //        window.location.href = url;
        //    } else if (confirm == 'false') {
        //        //Code if false
        //    }
        //});
        $("#btn_confirmation_window").dialog('open');
        return false;
    });
</script>
